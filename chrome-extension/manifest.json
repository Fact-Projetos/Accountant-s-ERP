{
    "manifest_version": 3,
    "name": "Fact ERP - Robo NFS-e",
    "description": "Automacao de portais de prefeitura para o Fact ERP Contabil",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "externally_connectable": {
        "matches": [
            "http://localhost:*/*",
            "https://localhost:*/*",
            "https://*.vercel.app/*"
        ]
    }
}